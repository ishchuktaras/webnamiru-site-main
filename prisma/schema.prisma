generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(uuid())
  postId    String   // Odkazuje na slug blogového příspěvku
  author    String
  email     String
  content   String
  createdAt DateTime @default(now())

  @@index([postId]) // Index pro rychlejší vyhledávání komentářů k příspěvku
}

model Rating {
  id        String   @id @default(uuid())
  postId    String   // Odkazuje na slug blogového příspěvku
  value     Int      // Hodnota hodnocení (např. 1-5 hvězdiček)
  createdAt DateTime @default(now())

  @@index([postId]) // Index pro rychlejší vyhledávání hodnocení k příspěvku
}
